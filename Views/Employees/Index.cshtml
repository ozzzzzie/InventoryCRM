@model IEnumerable<NAIMS.Models.Employee>

@{
    ViewData["Title"] = "All Employees";
}

<style>
    .table-responsive.text-nowrap table {
        font-size: 14px;
    }
</style>

<h1>All Employees</h1>
@if (User.IsInRole("SuperAdmin"))
{
    <p align="right">
    <a asp-action="Create" class="btn btn-dark">add new emoloyee</a>
</p>
}

@if (User.IsInRole("Manager"))
{
    <p align="right">
        <a asp-action="Create" class="btn btn-dark">add new emoloyee</a>
    </p>
}


<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Role
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone Number
                    </th>

                    @if (User.IsInRole("SuperAdmin"))
                    {
                    <th>
                        Target
                    </th>
                    <th>
                        Comission Rate
                    </th>
                    }

                    @if (User.IsInRole("Manager"))
                    {
                        <th>
                            Target
                        </th>
                        <th>
                            Comission Rate
                        </th>
                    }

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EFirstname) @Html.DisplayFor(modelItem => item.ELastname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ERole)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EPhonenumber)
                        </td>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                        <td>
                            @Html.DisplayFor(modelItem => item.ETarget)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EComissionPerc)
                        </td>
                        }

                        @if (User.IsInRole("Manager"))
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.ETarget)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EComissionPerc)
                            </td>
                        }

                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    @if (User.IsInRole("SuperAdmin"))
                                    {
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.EmployeeId">
                                            <i class="bx bx-edit-alt me-1"></i> Edit
                                        </a>
                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@item.EmployeeId">
                                            <i class="bx bx-info-circle"></i> Details
                                        </a>
                                        <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.EmployeeId">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </a>

                                    }
                                    else if (User.IsInRole("Manager"))
                                    {

                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.EmployeeId">
                                            <i class="bx bx-edit-alt me-1"></i> Edit
                                        </a>
                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@item.EmployeeId">
                                            <i class="bx bx-info-circle"></i> Details
                                        </a>
                                        <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.EmployeeId">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </a>
                                    }
                                    else
                                    {

                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@item.EmployeeId">
                                            <i class="bx bx-info-circle"></i> Details
                                        </a>

                                    }

                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
