@model NAIMS.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<a asp-action="Index" type="button" class="btn btn-dark">
    <i class="tf-icons bx bx-arrow-back"></i> Back
</a>
<br />
<br />
<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Details </h5> <small class="text-muted float-end">@Html.DisplayFor(model => model.EFirstname) @Html.DisplayFor(model => model.ELastname)</small>
        </div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">First Name</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.EFirstname)
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Last Name</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.ELastname)
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Role</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.ERole)
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Email</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.EEmail)
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Phone Number</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.EPhonenumber)
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Target</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.ETarget)
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Commission Rate</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.EComissionPerc)
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-sm-10">
                        <a asp-action="Edit" asp-route-id="@Model?.EmployeeId" class="btn btn-primary">
                            <i class="bx bx-edit-alt me-1"></i>Edit
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
