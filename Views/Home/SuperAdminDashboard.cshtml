                                            <a href="@Url.Action("Edit", "Employees", new { id = employee.EmployeeId })" class="btn btn-sm btn-primary">
                                                Manage
                                            </a>
                                        </div>
                                    </div>
                                    <p>
                                        Role: @employee.ERole
                                    </p>
                                    <p>
                                        Email: @employee.EEmail
                                    </p>
                                    <p>Target: @employee.ETarget</p>
                                    <p>
                                        Commission Rate: @employee.EComissionPerc %
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }
        else
        {
            <div>No users found</div>
        }
    </div>
</div>
