@model NAIMS.Models.Contact

@{
    ViewData["Title"] = "Details";
}

<a asp-action="Index" type="button" class="btn btn-dark">
    <i class="tf-icons bx bx-arrow-back"></i> Back
</a>
<br />
<br />
<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Details </h5> <small class="text-muted float-end">@Html.DisplayFor(model => model.Cname)</small>
        </div>
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Barcode</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Cname)
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">SKU</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Ctype)
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Name</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Caddress)
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Size</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Description</label>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-sm-10">
                        <a asp-action="Edit" asp-route-id="@Model?.ContactId" class="btn btn-primary">
                            <i class="bx bx-edit-alt me-1"></i>Edit
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
