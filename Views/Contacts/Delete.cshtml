@model NAIMS.Models.Contact

@{
    ViewData["Title"] = "Delete";
}


<a asp-action="Index" type="button" class="btn btn-dark">
    <i class="tf-icons bx bx-arrow-back"></i> Back
</a>
<br />
<br />
<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Are you sure you want to delete this contact? </h5> <small class="text-muted float-end">@Html.DisplayFor(model => model.Cname)</small>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Name</label>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Cname)
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Type</label>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Ctype)
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Address</label>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Caddress)
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Email</label>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Phone Number</label>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ContactId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bx bx-trash me-1"></i>Delete
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
