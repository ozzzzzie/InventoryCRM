@model NAIMS.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<div class="card">
    <div class="card-header">
        Are you sure you want to delete this order?
    </div>
    <div class="card-body">
        <h5 class="card-title">Order #@Model.OrderId</h5>
        <p class="card-text">Order Date: @Model.OrderDate.ToString("yyyy-MM-dd")</p>
        <p class="card-text">Contact: @Model.Contact?.Cname</p>
        <p class="card-text">Employee: @Model.Employee?.EFirstname @Model.Employee?.ELastname </p>
        <h5 class="card-title">Products</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var po in Model.ProductsOrders)
                {
                    <tr>
                        <td>@(po.Product.Brand?.Bname + " - " + po.Product.Pname + " (" + po.Product.Size + ")")</td>
                        <td>@po.Qty</td>
                        <td>@po.Product.Price</td>
                    </tr>
                }
            </tbody>
        </table>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="OrderId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
