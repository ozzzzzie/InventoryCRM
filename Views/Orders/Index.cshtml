@model IEnumerable<NAIMS.Models.Order>

@{
    ViewData["Title"] = "Invoices";
}

<h1>Invoices</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Contact</th>
            <th>Employee</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.Contact?.Cname</td>
                <td>@order.Employee?.EFirstname @order.Employee.ELastname</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
